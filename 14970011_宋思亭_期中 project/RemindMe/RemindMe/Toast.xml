<?xml version="1.0" encoding="utf-8" ?>
<toast launch="app-defined-string" scenario="alarm">
  <visual>
    <binding template="ToastGeneric">
      <text>Sample</text>
      <text>This is a simple toast notification example</text>
      <image placement="AppLogoOverride" src="Assets/fruit.png" />
    </binding>
  </visual>
  <actions>
    <action content="确认" activationType="foreground" arguments="check" imageUri="check.png" />
    <action content="取消" activationType="background" arguments="cancel" />
  </actions>
  <audio src="ms-winsoundevent:Notification.Reminder"/>
</toast>